<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Create Task</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="bg-zinc-900 text-white w-full min-h-screen flex flex-col items-center justify-start pt-10">

    <!-- Form -->
    <div class="form bg-zinc-800 px-10 py-8 rounded-xl shadow-lg w-full max-w-md mb-6">
      <form method="post" action="/create">
        <input
          name="title"
          class="block w-full bg-zinc-700 text-white px-5 py-2 rounded-md mb-3 placeholder-gray-400"
          type="text"
          placeholder="Task title"
          required
        />
        <textarea
          name="details"
          class="block w-full bg-zinc-700 text-white px-5 py-2 resize-none rounded-md mb-3 placeholder-gray-400"
          placeholder="Details"
          required
        ></textarea>
        <input
          class="bg-blue-500 text-white px-4 py-2 rounded-lg cursor-pointer hover:bg-blue-600 transition-all"
          type="submit"
          value="Create Task"
        />
      </form>
    </div>

    <!-- Task List -->
    <div class="w-full max-w-6xl flex flex-wrap gap-4 px-4 justify-start">
      <% if (files.length > 0) { %>
        <% files.forEach((file, index) => { %>
          <div class="bg-zinc-800 p-4 rounded-md shadow w-[23%] min-h-[150px] flex flex-col relative">

            <!-- Task Content -->
            <h1 class="text-xl font-semibold mb-2 break-words"><%= file.title %></h1>
            <p class="text-gray-300 break-words flex-grow"><%= file.details %></p>
            <div class="flex justify-between">

                <a href="/edit/<%= file.title%>">edit</a>
                <form action="/delete/<%=file.title%>" method="post" >

                    <button 
                    class="bg-red-500 text-white px-4 py-2 rounded-lg cursor-pointer hover:bg-red-600 transition-all"
                    type="submit"
                    >Delete</button>
                </form>
            </div>
        </div>
        <% }) %>
      <% } else { %>
        <h3 class="text-center text-gray-400 w-full">No tasks yet!</h3>
      <% } %>
    </div>
  </div>
</body>
</html>
